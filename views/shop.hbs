<main>
  {{#if hasProducts}}
    <div class="grid">
      {{#each prods}}
        <article class="card product-item">
          <header class="card__header">
            <h1 class="product__title">{{this.title}}
            </h1>
          </header>
          <div class="card__image">
            <img src="" alt="image not foud" />
          </div>
          <div class="card__content">
            <h2 class="product__pice">{{this.amount}}</h2>
            <p class="product__description">{{this.description}}</p>
          </div>
          <div class="card__actions">
            <button class="btn">Add to cart</button>
            <a href="/admin/delete-product/{{this.id}}" type="submit">Delete</a>

          </div>
        </article>
      {{/each}}
    </div>

  {{else}}
    <h1>No Products found</h1>

  {{/if}}
</main>