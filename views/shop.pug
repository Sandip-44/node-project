extends layouts/main-layout.pug

block styles 
         link(rel="stylesheet", href="/css/product.css")

block content
         main 
            if prods.length > 0
                .grid
                    each product in prods 
                        article.card.product-item
                        header.card__header 
                            h1.product_title #{product.title}

                        .card__image 
                            img(src="", alt="Books")  

                        .card__content 
                            h2.product__pirce $1234
                            p.product__description this is a test 

                        .card__actions  
                            button.btn Add to cart

            else 
                h1 No products  